<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/dbroot"
    android:gravity="center"
    android:orientation="vertical" >

    <lcf.clock.BigTextView
        android:id="@+id/dtimeView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dbrightness" />

        <SeekBar
            android:id="@+id/brightnessSeek"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <TextView
            android:gravity="right"
            android:id="@+id/dbrightnesslevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/button1Cl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dclose" />

</LinearLayout>